from app.models.BaseModel import BaseModel
from app.models.validation import Validator, ValidationError

class User(BaseModel):
    def __init__(self, email, password, first_name="", last_name=""):
        super().__init__()
        
        # Validate inputs
        self.email = Validator.validate_email(email)
        self.password = Validator.validate_password(password)
        self.first_name = Validator.validate_string(first_name, "First name", min_length=0, max_length=50)
        self.last_name = Validator.validate_string(last_name, "Last name", min_length=0, max_length=50)
    
    def to_dict(self):
        data = super().to_dict()
        data.update({
            "email": self.email,
            "first_name": self.first_name,
            "last_name": self.last_name
        })
        return data
